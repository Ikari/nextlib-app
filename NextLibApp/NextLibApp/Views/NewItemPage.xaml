<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="NextLibApp.NewItemPage"
		Title="Cadastrar Livro">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Salvar" Clicked="Save_Clicked" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout Spacing="20" Padding="15">
			<Label Text="Título" FontSize="Medium" />
			<Entry Text="{Binding Book.Title}" FontSize="Small" />
			<Label Text="Descrição" FontSize="Medium" />
			<Editor Text="{Binding Book.Description}" FontSize="Small" Margin="0" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
